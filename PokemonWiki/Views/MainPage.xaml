<Page
    x:Class="PokemonWiki.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Style="{StaticResource PageStyle}">
    
    <Grid x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <TextBlock Text="Velkommen til min pokemon app! Her har jeg en del med CRUD operasjoner og et gallery med noen av mine favoritt pokemon, i menyen til venstre. Kos deg!"></TextBlock>
            <Image Source="/Assets/landingpage.png"></Image>
        </Grid>
    </Grid>
</Page>
